<%- model_class = Rodosearch -%>
  <h1>Pesquisas - Transporte Rodovi√°rio</h1>

<%= form_tag(rodosearches_path, method: :get) do %>
<div class="form-group">
		<div class="row">
			  <div class="col-lg-3">
			  <%= select_tag(:tipo_consulta, options_for_select([['Nome', 1], ['Celular', 2]]), include_blank: 'Pesquisar por:', class: 'form-control')%>
			</div>
			</div>
		<div class="form-group">			  
		<div class="row">
			  <div class="col-lg-3">	  
		<%= text_field_tag(:search, nil, placeholder: 'Digite o parametro...', class: 'form-control') %>	
		</div>
		</div>
		<br />	
		<%= submit_tag "Consultar", class: 'btn btn-success' %>
<% end %>
<%= link_to t('.new', :default => t("helpers.links.new")), new_rodosearch_path, :class => 'btn btn-primary' %>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name('cliente') %></th>
      <th><%= model_class.human_attribute_name('fone') %></th>
      <th><%= model_class.human_attribute_name('status da pesquisa') %></th>
      <th><%= model_class.human_attribute_name('criado em') %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @rodosearches.each do |rodosearch| %>
      <tr>
        <td><%= link_to rodosearch.client, rodosearch_path(rodosearch) %></td>
        <td><%= rodosearch.phone %></td>
        <td><%= rodosearch.status %></td>
        <td><%= rodosearch.created_at %></td>
        <td>
        <%= link_to 'anexos', documents_path(:id=> rodosearch.id, :request=> 'rodosearches'), class: 'btn btn-primary btn-xs'%>	
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_rodosearch_path(rodosearch), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      rodosearch_path(rodosearch),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

