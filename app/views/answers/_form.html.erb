<h4>Adicionar Resposta</h4>

<%= form_for ([@question, @question.answers.build]) do |f| %>

<% if @question.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@question.errors.count, "error") %> prohibited this heritage from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @question.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  
    <div class="col-lg-5">	
	<%= f.text_field :description, class: "form-control", placeholder: "Descreva aqui a resposta..." -%>
	</div>
   
    <div class="col-lg-1">
	<%= f.number_field :score, class: "form-control" -%>
	</div>
		
    <%= f.submit 'Adicionar', class: 'btn btn-primary' %>
    
<% end %>



