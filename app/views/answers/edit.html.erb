<h1>Editar resposta</h1>
<%= form_for @answer, :html => { :class => "form-horizontal answer" } do |f| %>

  <% if @answer.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@answer.errors.count, "error") %> prohibited this client from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @answer.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'resposta', :class => 'control-label col-lg-2' %>
    <div class="col-lg-8">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%=f.error_span(:description) %>
  </div>
  <div class="form-group">
    <%= f.label 'score', :class => 'control-label col-lg-2' %>
    <div class="col-lg-1">
      <%= f.number_field :score, :class => 'form-control' %>
    </div>
    <%=f.error_span(:score) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                questions_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
