<%- model_class = Solution -%>
<div class="page-header">
  <h1>Conselho</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name('para a resposta') %>:</strong></dt>
  <dd><%= @solution.answer.description %></dd>
  <dt><strong><%= model_class.human_attribute_name('categoria') %>:</strong></dt>
  <dd><%= @solution.category_name %></dd>
  <dt><strong><%= model_class.human_attribute_name('descrição') %>:</strong></dt>
  <dd><%= @solution.description %></dd>
</dl>

<%= link_to 'Voltar para perguntas', questions_path, :class => 'btn btn-default'  %>
<%= link_to 'Voltar para tratativas', solutions_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_solution_path(@solution), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              solution_path(@solution),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
