<%- model_class = Solution -%>
  <h1>Conselhos</h1>
  
  <%= form_tag(solutions_path, method: :get) do %>
<div class="form-group">			  
		<div class="row">
			  <div class="col-lg-4">		
		<%= text_field_tag(:search, nil, placeholder: 'Digite um trecho do conselho...', class: 'form-control') %>			  	  </div>
		</div>
	</div>	
<%= submit_tag "Consultar", class: 'btn btn-success' %>

<% end %>
<table class="table table-striped">
  <thead>
    <tr>
      
      <th><%= model_class.human_attribute_name('tratativa') %></th>
      <th><%= model_class.human_attribute_name('resposta') %></th>
      <th><%= model_class.human_attribute_name('categoria') %></th>
      <th><%= model_class.human_attribute_name('criado em') %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @solutions.each do |solution| %>
      <tr>
        <td><%= link_to solution.description, solution_path(solution) %></td>
        <td><%= solution.answer.description %></td>
        <td><%= solution.category_name %></td>
        <td><%= solution.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_solution_path(solution), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      solution_path(solution),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

