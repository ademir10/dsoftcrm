<%= form_for @solution, :html => { :class => "form-horizontal solution" } do |f| %>

  <% if @solution.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@solution.errors.count, "error") %> prohibited this solution from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @solution.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

      <%= f.hidden_field :answer_id, value: @answer.id %>
      <% if @solution.category_name.blank? %>
      <%= f.hidden_field :category_name, value: params[:category] %>
      <% end %>
  <div class="form-group">
    <%= f.label 'descreva a tratativa', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%=f.error_span(:description) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                questions_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
