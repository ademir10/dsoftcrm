<!-- CSS PARA REMOVER O BOTÃO IMPRIMIR E APARECER OS DADOS DO CABEÇALHO SÓ NA IMPRESSÃO NA VIEW DE IMPRESSÃO -->
  <style type="text/css">
	@media print {
    #printbtn {
        display :  none;
    }
}

#printOnly {
   display : none;
}

@media print {
    #printOnly {
       display : block;
    }
}
</style>

<h1>Relatório de Pesquisas pendentes <%= image_tag 'interrogation.png' %></h1>

<!-- SÓ APARECE O FILTRO PARA PESQUISA SE O USUÁRIO TIVER O PERFIL DIFERENTE DE USER -->
<% if current_user.type_access != 'USER' %>

	 <% if params[:date1].present? && params[:date2].present? %>
	 <div id="printOnly">
	 <%if params[:seller].present? %>	
	 <h4>Vendedor: <%= params[:seller] %></h4>
	 <% end %>
	 <h4>Periodo: <%= params[:date1].to_date %> até <%= params[:date2].to_date %></h4>
	 </div>
	 <% end %>
	
    <%= form_tag(pendencies_report_path, method: :get) do %>
	<div class="form-group">			  
			<div class="row">
				  <div class="col-lg-3">		
			<%= select_tag(:seller, options_from_collection_for_select(@users, "name", "name", :selected => params[:seller]), include_blank: 'Selecione o Atendente', class: 'form-control', id: 'printbtn')%>			  	
			  	  </div>
			</div>
	 
	<div class="form-group">			  
			<div class="row">
				  <div class="col-lg-2">
			<%= date_field_tag(:date1,params[:date1], placeholder: 'data inicial', class: 'form-control', id: 'printbtn') %>
			</div>
			</div>
	
	<div class="form-group">			  
			<div class="row">
				  <div class="col-lg-2">
			<%= date_field_tag(:date2,params[:date2], placeholder: 'data final', class: 'form-control', id: 'printbtn') %>	
			</div>
			</div>
		</div>	
	<%= submit_tag "Consultar", class: 'btn btn-success', id: 'printbtn' %>
	<% end %>
	<button type="button" id ="printbtn" class="btn btn-success", onclick ="window.print();return false;">Imprimir</button>

<% end %>

<p />

<% if @packsearch.present? %>
<div class="panel panel-default">
  <div class="panel-heading" >Pacotes de Viagem - Pendencias</b></div>
  <h5 class="panel-body">
  <table class="table table-striped">
  <thead>
    <tr>
      <th> <%= 'cliente' %></th>
      <th><%= 'fone' %></th>
      <th><%= 'atendente' %></th>
      <th><%= 'atendido em' %></th>
      <% if current_user.type_access == 'USER' %>
      <th><%= 'ações' %></th>
      <% end %>
                
    </tr>
  </thead>
  <tbody>
 
 	<% @packsearch.each do |f| %>
 	    <tr>
        <td><%= f.client %></td>
        <td><%= f.phone %></td>
        <td><%= f.user %></td>
        <td><%= f.created_at %></td>
        <% if current_user.type_access == 'USER' %>
        <td><%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_packsearch_path(f), :class => 'btn btn-default btn-xs' %></td>
        <% end %>              
      </tr>
      <% end %>
       </tbody>
       
   </table>
  </h5>
</div>

<% end %>

