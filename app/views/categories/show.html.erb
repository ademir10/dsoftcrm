<%- model_class = Category -%>
<div class="page-header">
  <h1>Score</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name('nome') %>:</strong></dt>
  <dd><%= @category.name %></dd>
  <% if current_user.type_access == 'MASTER' %>
  <dt><strong><%= model_class.human_attribute_name('qnt perguntas') %>:</strong></dt>
  <dd><%= @category.qnt_question %></dd>
  <dt><strong><%= model_class.human_attribute_name('link da pagina') %>:</strong></dt>
  <dd><%= @category.link %></dd>
  <dt><strong><%= model_class.human_attribute_name('posição') %>:</strong></dt>
  <dd><%= @category.position %></dd>
  <% end %>
  
  <% if @category.link != 'meetings/new' %>  
  <hr />
  <h3>Range de perfis do cliente</h3>
  <h4><font color="red">Cliente Frio:</font></h4>
  de <b><%= @category.r1 %></b> até <b><%= @category.r2 %></b>
  <h4><font color="orange">Cliente Morno:</font></h5>
  de <b><%= @category.r3 %></b> até <b><%= @category.r4 %></b>
  <h4><font color="green">Cliente Quente:</font></h4>
  de <b><%= @category.r5 %></b> até <b><%= @category.r6 %></b>
  <% end %>
</dl>
 
<%= link_to t('.back', :default => t("helpers.links.back")),
              categories_path, :class => 'btn btn-default'  %>
<% if @category.link != 'meetings/new' %>              
<%= link_to t('.edit', :default => t("helpers.links.edit")), edit_category_path(@category), :class => 'btn btn-default' %>
<% end %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              category_path(@category),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
